# Habilitar mod_rewrite
RewriteEngine On
RewriteBase /

# Excluir carpetas físicas del router de React
# Si existe como archivo o directorio, servirlo directamente
RewriteCond %{REQUEST_URI} ^/(portfolio|contacto|api|static|imagenesportafolio)(/|$) [NC]
RewriteRule ^ - [L]

# Redirigir todas las demás rutas al index.html (para React Router)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.html [QSA,L]

# Habilitar CORS
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
</IfModule>

# Comprimir archivos
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache del navegador
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Seguridad - Deshabilitar listado de directorios
Options -Indexes

# Proteger archivos sensibles (documentación, logs, configuración)
<FilesMatch "\.(env|log|sql|md|txt|json)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Permitir acceso a archivos específicos necesarios
<FilesMatch "^(robots\.txt|sitemap\.xml|asset-manifest\.json|google-site-verification\.html)$">
    Order allow,deny
    Allow from all
</FilesMatch>

